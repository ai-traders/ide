{
  "name" : "ide.ci",
  "group" : "ide",
  "label_template": "${git}",
  "materials" : [
    {
      "type" : "git",
      "name" : "git",
      "url" : "git@git.ai-traders.com:ide/ide.git",
      "branch" : "ci"
    }
  ],
  "stages" : [
    {
      "name" : "style-unit",
      "clean_working_directory": true,
      "jobs" : [
        {
          "name" : "validate_repo",
          "resources" : ["docker","small"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide \"bundle install && bundle exec rake go:git:destructive_validate_repo -f RakefileRuby.rb\""
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        },
        {
          "name" : "shellcheck",
          "resources" : ["docker","small"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide rake style:shellcheck"
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        },
        {
          "name" : "shpec",
          "resources" : ["docker","small"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide rake unit:shpec"
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        }
      ]
    },
    {
      "name" : "ide_image_scripts_test",
      "jobs" : [
        {
          "name" : "test",
          "resources" : ["docker", "small"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide \"cd ide_image_scripts && bundle install && bundle exec rake kitchen:all\""
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        }
      ]
    },
    {
      "name" : "itest",
      "jobs" : [
        {
          "name" : "test_install",
          "resources" : ["docker", "small"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide rake itest:test_install"
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        },
        {
          "name" : "test_local_install",
          "resources" : ["docker", "small"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide rake itest:test_local_install"
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        },
        {
          "name" : "test_image",
          "resources" : ["build_docker"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide rake itest:test_image"
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        }
      ]
    },
    {
      "name" : "release",
      "jobs" : [
        {
          "name" : "release",
          "resources" : ["docker","small"],
          "tasks" : [
            {
              "type": "plugin",
              "run_if": "passed",
              "configuration": [
                {
                  "key": "script",
                  "value": "ide \"bundle install && bundle exec rake release:code -f RakefileRuby.rb\""
                }
              ],
              "plugin_configuration": {
                "id": "script-executor",
                "version": "1"
              }
            }
          ]
        }
      ]
    }
  ]
}
